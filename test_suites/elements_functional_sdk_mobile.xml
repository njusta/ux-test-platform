<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="ElementsSDK Test Suite">
    <groups>
        <run>
            <include name="mobile-regression"/>
        </run>
    </groups>
    <!-- Functional(JavaScript) Tests -->
    <test name="ElementsSDK: Functional(JavaScript) Tests" parallel="classes" thread-count="10">
        <classes>
            <class name="elementsSDKTests.functionalTests.AlertsTest"/>
            <class name="elementsSDKTests.functionalTests.ButtonsTest"/>
            <class name="elementsSDKTests.functionalTests.DropdownTest"/>
            <class name="elementsSDKTests.functionalTests.FooterTest"/>
            <class name="elementsSDKTests.functionalTests.IconsTest"/>
            <class name="elementsSDKTests.functionalTests.InputsTest"/>
            <class name="elementsSDKTests.functionalTests.LoadingSpinnerTest"/>
            <class name="elementsSDKTests.functionalTests.TabsTest"/>
            <class name="elementsSDKTests.functionalTests.CalendarTest"/>
            <class name="elementsSDKTests.functionalTests.TablesTest"/>
            <class name="elementsSDKTests.functionalTests.TimePickerTest"/>
            <class name="elementsSDKTests.functionalTests.DatePickerTest"/>
            <class name="elementsSDKTests.functionalTests.TimePickerTest"/>
            <class name="elementsSDKTests.functionalTests.ProgressBarTest"/>
            <class name="elementsSDKTests.functionalTests.PhoneNumberTest"/>
        </classes>
    </test>
</suite>