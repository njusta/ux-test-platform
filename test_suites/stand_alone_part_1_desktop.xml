<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Desktop: Stand Alone Part 1 Regression Test Suite">
    <groups>
        <run>
            <include name="desktop-regression"/>
        </run>
    </groups>
    <test name="Desktop: Stand Alone Part 1 Tests" parallel="classes">
        <classes>
            <class name="standAloneTests.ContextualHelpTest"/>
            <class name="standAloneTests.DrawerTest"/>
            <class name="standAloneTests.AvatarDisplayTest"/>
            <class name="standAloneTests.AlertsTest"/>
        </classes>
    </test>
    <test name="Desktop: App-Header Tests">
        <classes>
            <class name="standAloneTests.AppHeaderTest"/>
        </classes>
    </test>
</suite> 